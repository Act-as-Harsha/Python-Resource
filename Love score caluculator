# Love Score Calculator

# Taking input
name1 = input("What is your name? ")
name2 = input("What is his/her name? ")

# Combine and convert to lowercase
combine_string = name1 + name2
lower_case_string = combine_string.lower()

# Count letters for "TRUE"
t = lower_case_string.count('t')
r = lower_case_string.count('r')
u = lower_case_string.count('u')
e1 = lower_case_string.count('e')
true = t + r + u + e1

# Count letters for "LOVE"
l = lower_case_string.count('l')
o = lower_case_string.count('o')
v = lower_case_string.count('v')
e2 = lower_case_string.count('e')
love = l + o + v + e2

# Calculate love score
love_score = int(str(true) + str(love))

# Output based on love score
if love_score < 10 or love_score > 90:
    print(f"Your score is {love_score}, and you get Coke and Mentos.")
elif 40 <= love_score <= 50:
    print(f"Your score is {love_score}, and you're alright together.")
else:
    print(f"Your love score is {love_score}.")
